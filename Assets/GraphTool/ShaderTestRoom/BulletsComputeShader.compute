#pragma kernel CSMain

// 弾の構造体
struct Bullet
{
	float3 pos;
	float3 accel;
	float4 col;
};

// 前回の更新からの経過時間
float DeltaTime;

// 弾の構造化バッファ
RWStructuredBuffer<Bullet> Bullets;

// (8, 1, 1)のスレッドで回す
[numthreads(8,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
	// それぞれの位置情報に移動ベクトルを加算
    Bullets[id.x].pos += Bullets[id.x].accel * DeltaTime;
}